{
  "name": "bookmark-sync-tool",
  "version": "1.0.0",
  "description": "Cross-browser bookmark synchronization tool for Chrome and ChatGPT Atlas",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "keywords": ["bookmark", "sync", "chrome", "chatgpt", "atlas", "cross-platform"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.bookmarksync.app",
    "productName": "Bookmark Sync Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}